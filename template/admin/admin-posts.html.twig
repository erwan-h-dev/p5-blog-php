{% extends 'admin.html.twig' %}

{% block ariane %}
<div class="col-sm-6">
    <h3>{{ location }}</h3>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin" data-bs-original-title="" title="">Admin</a> / <a href="/posts-admin" data-bs-original-title="" title="">{{ location }}</a></li>
    </ol>
</div>
<div>
</div>
{% endblock %}

{% block base %}
<div class="col-sm-12">
    <div class="card">
        <div class="card-header ">
            <div class="setting-list">
                <a href="{{ path('admin_new_post') }}" class="btn btn-secondary btn-sm mx-2">new post</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table datatable table-striped table-bordered table-hover table-sm">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>Titre</th>
                        <th>Auteur</th>
                        <th>Date de creation</th>
                        <th>Date de modification</th>
                        <th>Comments</th>
                        <th>Status</th>
                        <th><!-- Actions --></th>
                    </tr>
                </thead>
                <tbody>
                    {% for post in posts %}
                    <tr>
                        <td>{{ post.id }}</td>
                        <td>{{ post.title }}</td>
                        <td>{{ getEntity("user", post.authorId).userName }}</td>
                        <td>{{ post.createdAt|date('d/m/Y H:i:s') }}</td>
                        <td>{{ post.updatedAt|date('d/m/Y H:i:s') }}</td>
                        <td>{{ getCollection('comment', {'postId': post.id, 'status': 1 })|length }}</td>
                        <td>
                            {% if post.status == 1 %}
                                <a href="{{ path('post_toggle_status',{id: post.id}) }}" 
                                class="btn btn-square btn-warning" title="enabled comment"><i class="fa fa-minus-square"></i></a>
                            {% elseif post.status == 2 %}
                                <a href="{{ path('post_toggle_status',{id: post.id}) }}" class="btn btn-square btn-primary" title="disable comment"><i class="fa fa-check-square"></i></a>
                            {% else %}
                               <a  class="btn btn-square btn-info disabled" title="in redaction..."><i class="fa fa-file-text-o"></i></a>
                            {% endif %}
                        </td>
                        <td class="text-end">
                            <a href="{{ path('admin_edit_post',{id: post.id}) }}" class="btn btn-square btn-primary"><i class="fa fa-edit"></i></a>
                            <a data-href="{{ path('remove_post',{id: post.id}) }}" class="btn btn-square btn-danger remove_post"><i class="fa fa-trash-o"></i></a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
        $('.datatable').DataTable();

        $(document).on("click", ".remove_post", function(){
            var href = $(this).data('href');
            swal({
                title: 'Are you sure?',
                text: "You won't be able to revert this post?",
                icon: 'warning',
                buttons: true,
                dangerMode: true,
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((willDelete) => {
                if (willDelete) {
                    $.post($(this).data('href'), function(data){
                        swal("Poof! Your imaginary file has been deleted!", {
                            icon: "success",
                        }).then((result) => {
                            window.location.reload();
                        });
                    });
                }
            })
        })
    });
</script>
{% endblock %}