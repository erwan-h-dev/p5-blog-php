{% extends 'admin.html.twig' %}

{% block ariane %}
<div class="col-sm-6">
    <h3>{{ location }}</h3>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin" data-bs-original-title="" title="">Admin</a> / <a href="/posts-admin" data-bs-original-title="" title="">{{ location }}</a></li>
    </ol>
</div>
<div>
</div>
{% endblock %}

{% block base %}
<div class="col-sm-12">
    <div class="card">
        <div class="card-header ">
            <div class="setting-list">
                <a href="/admin/posts/new" class="btn btn-secondary btn-sm mx-2">new post</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table datatable table-striped table-bordered table-hover table-sm">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>Titre</th>
                        <th>Auteur</th>
                        <th>Date</th>
                        <th>Comments</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for post in posts %}
                    <tr>
                        <td>{{ post.id }}</td>
                        <td>{{ post.title }}</td>
                        <td>{{ post.author }}</td>
                        <td>{{ post.date }}</td>
                        <td>{{user.userName}}</td>
                        <td class="text-end">
                            <a href="{{ path('edit_post',{id: post.id}) }}" class="btn btn-primary btn-sm">Editer</a>
                            <a href="{{ path('remove_post',{id: post.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
        $('.datatable').DataTable();
    });
</script>
{% endblock %}